DEVICE=<%= @device %>
NAME=<%= @ifname %>
HWADDR=<%= @macaddress %>
MASTER=<%= @master %>
SLAVE=yes
<% if @type %>TYPE=<%= @type %>
<% else %>
TYPE=Ethernet
<% end -%>
<% if @ethtool_opts %>ETHTOOL_OPTS="<%= @ethtool_opts %>"
<% end -%>
<% if @defroute %>DEFROUTE=<%= @defroute %>
<% end -%>
<% if @zone %>ZONE=<%= @zone %>
<% end -%>
<% if @metric %>METRIC=<%= @metric %>
<% end -%>
NM_CONTROLLED=yes
